{
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "no-extra-parens": true,
    "valid-jsdoc": true,
    "block-scoped-var": true,
    "default-case": true,
    "dot-location": "property",
    "guard-for-in": true,
    "no-div-regex": true,
    "no-else-return": true,
    "no-eq-null": true,
    "no-floating-decimal": true,
    "no-param-reassign": true,
    "no-process-env": true,
    "no-self-compare": true,
    "no-throw-literal": true,
    "no-void": true,
    "radix": true,
    "strict": "global",
    "no-shadow": false,
    "no-undefined": true,
    "quotes": "single",
    "brace-style": ["ltbs", { "allowSingleLine": false }],
    "comma-style": "first",
    "func-names": true,
    "func-style": "declaration",
    "indent": [2, 2],
    "linebreak-style": "unix",
    "new-cap": false,
    "no-lonely-if": true,
    "no-multiple-empty-lines": true,
    "no-unneeded-ternary": true,
    "operator-linebreak": "after",
    "space-after-keywords": "always",
    "space-before-function-paren": "never",
    "space-in-parens": "never",
    "spaced-line-comment": "always"
  }
}
